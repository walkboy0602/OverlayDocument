
<div id="commentBox" ng-controller="HomeCtrl">
    <div class="fb-comments">
        <input type="text" ng-model="form.text" />
        <button type="button" ng-click="add(form)">Add Comment</button>
        <div ng-repeat="item in form.items">
            <p>{{item.text}}</p>
        </div>
    </div>
</div>
